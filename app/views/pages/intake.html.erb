<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Practice Fusion Schedule</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" crossorigin="anonymous" />

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- 🔐 Topbar -->
  <div class="topbar">
    <div class="help">Help <i class="fas fa-caret-down"></i></div>
    <div class="user-info">
      <div>Susan Martin</div>
      <div>|</div>
      <div>HeartWell Health <i class="fas fa-caret-down"></i></div>
      <div>|</div>
      <div><i class="fas fa-lock icon"></i></div>
      <div><i class="fas fa-cog icon"></i></div>
      <%= button_to destroy_user_session_path, method: :delete, class: "border-0 bg-transparent p-0 d-flex align-items-center text-danger ms-2" do %>
        <i class="fas fa-sign-out-alt me-2"></i>
        <span>Log out</span>
      <% end %>
    </div>
  </div>

  <!-- Sidebar -->
  <nav class="sidebar d-flex flex-column align-items-center">
    <div class="logo">
      <%= image_tag("unnamed.png", alt: "practice fusion image") %>
    </div>
    <div class="logo-text">practice fusion</div>

    <%# Sidebar buttons %>
    <% [["Home", "home"], ["Schedule", "calendar-alt"], ["Tasks", "tasks"], ["Charts", "file-medical-alt"], ["Messages", "envelope"], ["Reports", "chart-bar"]].each do |label, icon| %>
      <button aria-label="<%= label %>" title="<%= label %>">
        <i class="fas fa-<%= icon %>"></i>
      </button>
      <div class="logo-text"><%= label %></div>
    <% end %>
  </nav>

  <!-- Header section -->
  <div class="main-container ms-5">
    <div class="topbar mt-4">
      Settings <span class="separator">›</span> <a href="#">Patient intake forms</a>
      <a href="/ehrsetting" class="close-x">×</a>
    </div>
    <div class="header-bar">
      <h1>Patient intake forms</h1>
      <div class="subtext">Manage patient intake forms</div>
      <div class="btn-intake-container">
        <button type="button" class="btn btn-intake" onclick="window.location.href='/intakenew'">
          Create intake form <i class="fas fa-chevron-down"></i>
        </button>
      </div>
    </div>

    <!-- Intake Forms Table -->
    <div class="p-3">
      <button type="button" class="btn btn-sm btn-outline-primary mb-3">Intake forms</button>
      <table class="table mb-0">
        <thead>
          <tr>
            <th>NAME</th>
            <th>CREATED BY</th>
            <th class="checkbox-cell">UPDATED AT</th>
            <th class="checkbox-cell"><input type="checkbox" aria-label="Select all" /></th>
          </tr>
        </thead>
        <tbody>
