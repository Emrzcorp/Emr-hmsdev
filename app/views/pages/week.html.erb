<script>
  document.addEventListener('turbo:load', function () {
    const btn = document.getElementById('loadAppointmentModal');
    if (btn) {
      btn.addEventListener('click', function () {
        fetch('/pages/appointment_modal')
          .then(response => response.text())
          .then(html => {
            document.getElementById('appointmentModalContent').innerHTML = html;
            let modal = new bootstrap.Modal(document.getElementById('appointmentModal'));
            modal.show();
          });
      });
    }
  });
</script>
