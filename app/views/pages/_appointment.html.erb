
<div class="modal-container mt-4">
  <!-- Header -->
  <div class="modal-header">
    <div>➕ New Appointment</div>
    <div class="close-btn" data-bs-dismiss="modal">&times;</div>
  </div>

  <!-- Tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#with-patient" type="button">With Patient</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="tab" data-bs-target="#block-time" type="button">Block Time</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="tab" data-bs-target="#block-range" type="button">Block Range</button>
    </li>
  </ul>

  <!-- Tab Content -->
  <div class="tab-content">

    <!-- With Patient -->
    <div class="tab-pane fade show active" id="with-patient">
      <form>
        <div class="mb-3">
          <label class="form-label">Patient</label>
          <input type="search" class="form-control" placeholder="Search patient..." />
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Provider</label>
            <select class="form-select"><option>Persaud, Ian</option></select>
          </div>
          <div class="col-md-6">
            <label class="form-label">Facility</label>
            <select class="form-select"><option>HeartWell Health</option></select>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label">Chief Complaint</label>
          <textarea class="form-control" rows="2" placeholder="Enter complaint..."></textarea>
        </div>
        <div class="row mb-3">
          <div class="col-md-4">
            <label class="form-label">Appointment Type</label>
            <select class="form-select"><option>Select..</option></select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Duration</label>
            <select class="form-select"><option>30 mins</option></select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Coverage Type</label>
            <select class="form-select"><option>Select</option></select>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Time</label>
            <div class="input-group">
              <button class="btn btn-outline-secondary" type="button">−</button>
              <input type="text" class="form-control text-center" value="06:00 AM" readonly />
              <button class="btn btn-outline-secondary" type="button">+</button>
            </div>
          </div>
        </div>
        <div class="form-check mb-3">
          <input class="form-check-input" type="checkbox" id="repeatCheck1" />
          <label class="form-check-label" for="repeatCheck1">Repeat</label>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>

    <!-- Block Time -->
    <div class="tab-pane fade" id="block-time">
      <form>
        <div class="mb-3">
          <label class="form-label">Block time for</label>
          <select class="form-select"><option>Persaud, Ian</option></select>
        </div>
        <div class="mb-3">
          <label class="form-label">Facility</label>
          <select class="form-select"><option>HeartWell Health</option></select>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Time</label>
            <div class="input-group">
              <button class="btn btn-outline-secondary" type="button">−</button>
              <input type="text" class="form-control text-center" value="06:00 AM" readonly />
              <button class="btn btn-outline-secondary" type="button">+</button>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label">Duration</label>
          <select class="form-select">
            <option>15 mins</option>
            <option>30 mins</option>
            <option>45 mins</option>
            <option>60 mins</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">Reason</label>
          <select class="form-select"><option>Select...</option></select>
        </div>
        <div class="mb-3">
          <label class="form-label">Repeat</label>
          <select class="form-select"><option>Never</option></select>
        </div>
        <div class="mb-3">
          <label class="form-label">Description</label>
          <textarea class="form-control" maxlength="100"></textarea>
        </div>
        <div class="mb-3">
          <label class="form-label">Note</label>
          <textarea class="form-control"></textarea>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>

    <!-- Block Range -->
    <div class="tab-pane fade" id="block-range">
      <form>
        <div class="mb-3">
          <label class="form-label">Block time for</label>
          <select class="form-select"><option>Persaud, Ian</option></select>
        </div>
        <div class="mb-3">
          <label class="form-label">Facility</label>
          <select class="form-select"><option>HeartWell Health</option></select>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Start Date</label>
            <input type="date" class="form-control" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Start Time</label>
            <div class="input-group">
              <button class="btn btn-outline-secondary" type="button">−</button>
              <input type="text" class="form-control text-center" value="06:00 AM" readonly />
              <button class="btn btn-outline-secondary" type="button">+</button>
            </div>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">End Date</label>
            <input type="date" class="form-control" />
          </div>
          <div class="col-md-6">
            <label class="form-label">End Time</label>
            <div class="input-group">
              <button class="btn btn-outline-secondary" type="button">−</button>
              <input type="text" class="form-control text-center" value="06:30 AM" readonly />
              <button class="btn btn-outline-secondary" type="button">+</button>
            </div>
          </div>
        </div>
        <div class="form-check mb-3">
          <input class="form-check-input" type="checkbox" id="allDayCheck" />
          <label class="form-check-label" for="allDayCheck">All day</label>
        </div>
        <div class="mb-3">
          <label class="form-label">Reason</label>
          <select class="form-select"><option>Select...</option></select>
        </div>
        <div class="mb-3">
          <label class="form-label">Description</label>
          <textarea class="form-control" maxlength="100"></textarea>
        </div>
        <div class="mb-3">
          <label class="form-label">Note</label>
          <textarea class="form-control"></textarea>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>

  </div>
</div>

