<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>New appointment</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<body>
<div class="container mt-3" style="max-width: 600px;">
  <div class="modal-header d-flex justify-content-between align-items-center">
    <div>New appointment</div>
    <div class="close-btn" data-bs-dismiss="modal" aria-label="Close" role="button" tabindex="0">&times;</div>
  </div>

  <ul class="nav nav-tabs px-3" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="with-patient-tab" data-bs-toggle="tab" data-bs-target="#with-patient" type="button" role="tab">With patient</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="block-time-tab" data-bs-toggle="tab" data-bs-target="#block-time" type="button" role="tab">Block time</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="block-range-tab" data-bs-toggle="tab" data-bs-target="#block-range" type="button" role="tab">Block range</button>
    </li>
  </ul>

  <div class="tab-content scrollable-body p-3 border border-top-0">
    <!-- With Patient Tab -->
    <div class="tab-pane fade show active" id="with-patient" role="tabpanel">
      <form>
        <div class="mb-2">
          <label class="form-label">Patient</label>
          <input type="search" class="form-control" placeholder="Search patient..." />
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <label class="form-label">Provider</label>
            <select class="form-select">
              <option>Persaud, Ian</option>
            </select>
          </div>
          <div class="col-md-6">
            <label class="form-label">Facility</label>
            <select class="form-select">
              <option>HeartWell Health</option>
            </select>
          </div>
        </div>
        <div class="mb-2">
          <label class="form-label">Chief Complaint</label>
          <textarea class="form-control" rows="2"></textarea>
        </div>
        <div class="row mb-2">
          <div class="col-md-4">
            <label class="form-label">Appointment Type</label>
            <select class="form-select"><option>Select..</option></select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Duration</label>
            <select class="form-select"><option>30</option></select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Coverage Type</label>
            <select class="form-select"><option>Select</option></select>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Time</label>
            <div class="input-group">
              <button class="btn btn-outline-secondary" type="button">−</button>
              <input type="text" class="form-control text-center" value="06:00 AM" readonly />
              <button class="btn btn-outline-secondary" type="button">+</button>
            </div>
          </div>
        </div>
        <div class="form-check mb-2">
          <input class="form-check-input" type="checkbox" id="repeatCheck1" />
          <label class="form-check-label" for="repeatCheck1">Repeat</label>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>

    <!-- Block Time Tab -->
    <div class="tab-pane fade" id="block-time" role="tabpanel">
      <form>
        <div class="mb-2">
          <label class="form-label">Block time for</label>
          <select class="form-select"><option>Persaud, Ian</option></select>
        </div>
        <div class="mb-2">
          <label class="form-label">Facility</label>
          <select class="form-select"><option>HeartWell Health</option></select>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <label class="form-label">Date</label>
            <input type="date" class="form-control" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Time</label>
            <div class="input-group">
              <button class="btn btn-outline-secondary" type="button">−</button>
              <input type="text" class="form-control text-center" value="06:00 AM" readonly />
              <button class="btn btn-outline-secondary" type="button">+</button>
            </div>
          </div>
        </div>
        <div class="mb-2">
          <label class="form-label">Duration</label>
          <select class="form-select">
            <option>15 mins</option>
            <option>30 mins</option>
            <option>45 mins</option>
            <option>60 mins</option>
          </select>
        </div>
        <div class="mb-2">
          <label class="form-label">Reason</label>
          <select class="form-select"><option>Select...</option></select>
        </div>
        <div class="mb-2">
          <label class="form-label">Repeat</label>
          <select class="form-select"><option>Never</option></select>
        </div>
        <div class="mb-2">
          <label class="form-label">Description</label>
          <textarea class="form-control" maxlength="100"></textarea>
        </div>
        <div class="mb-2">
          <label class="form-label">Note</label>
          <textarea class="form-control"></textarea>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>

    <!-- Block Range Tab -->
    <div class="tab-pane fade" id="block-range" role="tabpanel">
      <form>
        <div class="mb-2">
          <label class="form-label">Block time for</label>
          <select class="form-select"><option>Persaud, Ian</option></select>
        </div>
        <div class="mb-2">
          <label class="form-label">Facility</label>
          <select class="form-select"><option>HeartWell Health</option></select>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <label class="form-label">Start Date</label>
            <input type="date" class="form-control" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Start Time</label>
            <div class="input-group">
              <button class="btn btn-outline-secondary" type="button">−</button>
              <input type="text" class="form-control text-center" value="06:00 AM" readonly />
              <button class="btn btn-outline-secondary" type="button">+</button>
            </div>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <label class="form-label">End Date</label>
            <input type="date" class="form-control" />
          </div>
          <div class="col-md-6">
            <label class="form-label">End Time</label>
            <div class="input-group">
              <button class="btn btn-outline-secondary" type="button">−</button>
              <input type="text" class="form-control text-center" value="06:30 AM" readonly />
              <button class="btn btn-outline-secondary" type="button">+</button>
            </div>
          </div>
        </div>
        <div class="form-check mb-2">
          <input class="form-check-input" type="checkbox" id="allDayCheck" />
          <label class="form-check-label" for="allDayCheck">All day</label>
        </div>
        <div class="mb-2">
          <label class="form-label">Reason</label>
          <select class="form-select"><option>Select...</option></select>
        </div>
        <div class="mb-2">
          <label class="form-label">Description</label>
          <textarea class="form-control" maxlength="100"></textarea>
        </div>
        <div class="mb-2">
          <label class="form-label">Note</label>
          <textarea class="form-control"></textarea>
        </div>
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
