<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Appointment requests</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>
<body>
<div class="header-bar">Appointment requests</div>
<div class="filter-bar">
  <button type="button" class="btn btn-light btn-sm" aria-label="Refresh">
    <i class="fas fa-sync-alt"></i>
  </button>
  <select aria-label="Select provider">
    <option>All providers</option>
  </select>
  <select aria-label="Select request type">
    <option>All requests</option>
  </select>
</div>
<div class="main-content">
  <div class="left-panel" role="region" aria-label="Appointment requests list">
    <div class="appointment-request" tabindex="0">
      APPOINTMENT REQUEST
      <small>Julian Provider at North Office</small>
      <small>Carol Patient (555) 123-4567</small>
      <small>"Travel immunizations"</small>
      <small class="time">10/17/2022 4:30 PM (30 min)</small>
      <div class="available-text">Available</div>
      <div class="btn-group-appointment">
        <button class="btn-reschedule" type="button">Reschedule</button>
        <button class="btn-deny" type="button">Deny</button>
        <button class="btn btn-primary btn-sm btn-approve" type="button">Approve</button>
      </div>
    </div>
    <div class="text-end text-muted" style="font-size: 11px; margin-top: 6px;">06:41 PM 10/14/22</div>
  </div>
  <div class="right-panel" role="region" aria-label="Calendar view">
    <div class="calendar-header">
      <div class="date-text">Mon, Oct 17, 2022</div>
      <div class="calendar-controls d-flex align-items-center gap-1">
        <button type="button" aria-label="Select date"><i class="fas fa-calendar-alt"></i></button>
        <button type="button" aria-label="Previous day"><i class="fas fa-chevron-left"></i></button>
        <button type="button" aria-label="Next day"><i class="fas fa-chevron-right"></i></button>
        <button type="button" class="btn-today" aria-label="Today">Today</button>
        <button type="button" aria-label="Zoom in"><i class="fas fa-search-plus"></i></button>
        <button type="button" aria-label="Zoom out"><i class="fas fa-search-minus"></i></button>
        <select aria-label="Select time slot duration">
          <option>30 min slots</option>
        </select>
      </div>
    </div>
    <div class="d-flex calendar-body">
      <div class="time-labels" aria-hidden="true">
        <div class="time-label">11:00 AM</div>
        <div class="time-label">12:00 PM</div>
      </div>
      <div class="calendar-events position-relative flex-grow-1">
        <div class="calendar-row" style="height: 40px;"></div>
        <div class="calendar-row" style="height: 40px;"></div>
        <div class="event-block" style="top: 40px; height: 40px;">
          <div>Julian Provider</div>
          <div class="event-subtext">Lunch</div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
</body>
</html>
