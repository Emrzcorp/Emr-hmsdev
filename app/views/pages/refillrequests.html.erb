 <body>
  <div class="topbar">
   <div class="help">
    Help
    <i class="fas fa-caret-down">
    </i>
   </div>
   <div class="user-info">
    <div>
     Susan Martin
    </div>
    <div>
     |
    </div>
    <div>
     HeartWell Health
     <i class="fas fa-caret-down">
     </i>
    </div>
    <div>
     |
    </div>
    <div>
     <i class="fas fa-lock icon">
     </i>
    </div>
    <div>
      <%= link_to ehrsetting_path do %>
        <i class="fas fa-cog icon"></i>
      <% end %>
    </div>
    <%= button_to destroy_user_session_path, method: :delete, class: "border-0 bg-transparent p-0 d-flex align-items-center text-danger" do %>
      <i class="fas fa-sign-out-alt me-2"></i>
      <span>Log out</span>
    <% end %>
   </div>
  </div>
  <nav class="sidebar d-flex flex-column align-items-center">
    <div class="logo">
      <%= image_tag("unnamed.png", alt: "practice fusion image") %>
    </div>
    <div class="logo-text">
      practice fusion
    </div>
    <button aria-label="Home" style="color:#999999;" title="Home">
      <i class="fas fa-home">
      </i>
    </button>
    <div class="logo-text">
      Home
    </div>
    <button aria-label="Schedule" style="color:#3bb4f2;" title="Schedule"  onclick="window.location.href='/ot'">
      <i class="fas fa-calendar-alt">
      </i>
    </button>
    <div class="logo-text">
      Schedule
    </div>
    <button aria-label="Tasks" style="color:#999999;" title="Tasks" onclick="window.location.href='/task'">
      <i class="fas fa-tasks"></i>
    </button>
    <div class="logo-text">Task</div>
    <button aria-label="Charts" style="color:#999999;" title="Charts">
      <i class="fas fa-file-medical-alt">
      </i>
    </button>
    <div class="logo-text">
      Charts
    </div>
    <button aria-label="Messages" style="color:#999999;" title="Messages">
      <i class="fas fa-envelope">
      </i>
    </button>
    <div class="logo-text">
      Messages
    </div>
    <button aria-label="Reports" style="color:#999999;" title="Reports">
      <i class="fas fa-chart-bar">
      </i>
    </button>
    <div class="logo-text">
      Reports
    </div>
  </nav>
  <div class="main-container d-flex flex-column flex-grow-1">
    <div class="main-container d-flex flex-column flex-grow-1">
      <nav class="nav nav-tabs">
        <a class="nav-link active" href="#" style="color:#0d6efd; font-weight: 500;">Tasks <i class="fas fa-caret-down" style="font-size: 10px;"></i></a>
        <a class="nav-link" href="#" style="color:white;">Documents</a>
      </nav>

      <div class="tasks-header">
        <div>Tasks</div>
        <div class="dropdown">
          <button class="btn btn-actions dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Actions dropdown">Actions</button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="#">Action 1</a></li>
            <li><a class="dropdown-item" href="#">Action 2</a></li>
          </ul>
        </div>
      </div>

      <div class="p-2 bg-primary d-flex flex-wrap align-items-center gap-1">
        <button type="button" class="btn btn-tab active" onclick="window.location.href='/task';">All tasks (214)</button>
        <button type="button" class="btn btn-tab" onclick="window.location.href='/mytask';">My tasks</button>
        <button type="button" class="btn btn-tab" onclick="window.location.href='/unassignedtask';">Unassigned tasks</button>
        <button type="button" class="btn btn-tab" onclick="window.location.href='/rxchange';">Rx change/cancel</button>
        <button type="button" class="btn btn-tab" onclick="window.location.href='/labresults';">Lab results</button>
        <button type="button" class="btn btn-tab" onclick="window.location.href='/refillrequests';" >Refill requests</button>
        <button type="button" class="btn btn-tab" onclick="window.location.href='/imagingresults';">Imaging results</button>
        <button type="button" class="btn btn-tab"><i class="fas fa-ellipsis-h"></i></button>
        <button type="button" class="btn btn-tab" onclick="window.location.href='/tool';" aria-label="Tool" title="Tool">
          <i class="fas fa-wrench"></i>
        </button>
      </div>

      <div class="filter-bar border-bottom d-flex align-items-center gap-2 flex-wrap">
        <select class="form-select" aria-label="All types select" style="max-width: 140px;">
          <option selected>All types</option>
          <option value="1">Type 1</option>
          <option value="2">Type 2</option>
        </select>

        <input type="search" class="form-control" placeholder="Search patient name, record ..." aria-label="Search patient name, record" style="max-width: 220px;" />

        <select class="form-select" aria-label="Incomplete select" style="max-width: 140px;">
          <option selected>Incomplete</option>
          <option value="1">Complete</option>
        </select>

        <select class="form-select" aria-label="Current select" style="max-width: 140px;">
          <option selected>Current</option>
          <option value="1">Past</option>
        </select>

        <div class="input-group" style="max-width: 220px;">
          <input type="search" class="form-control" placeholder="All providers" aria-label="All providers" />
          <%# <span class="input-group-text"><i class="fas fa-search"></i></span> %>
        </div>

        <!-- Button to trigger modal -->
        <button type="button" class="btn btn-primary btn-primary-custom ms-auto" data-bs-toggle="modal" data-bs-target="#newTaskModal">
          New task
        </button>

        <!-- Modal -->
        <div class="modal fade" id="newTaskModal" tabindex="-1" aria-labelledby="newTaskModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

              <!-- Modal Header -->
              <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="newTaskModalLabel">New Task</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>

              <!-- Modal Body -->
              <div class="modal-body">
                <div class="mb-3">
                  <label class="form-label fw-bold">DETAILS <span class="text-danger">*</span></label>
                  <textarea class="form-control" rows="3" maxlength="255" placeholder="Enter task details"></textarea>
                  <div class="text-end small">0/255</div>
                </div>

