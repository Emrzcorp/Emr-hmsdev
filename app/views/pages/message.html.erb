<html lang="en">
 <head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1" name="viewport"/>
  <title>
   Practice Fusion Schedule
  </title>
  <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <style>
   body {
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #fff;
  }
  .topbar {
    background-color: #333333;
    color: #ccc;
    font-size: 13px;
    height: 30px;
    line-height: 30px;
    padding: 0 10px;
    display: flex;
    justify-content: flex-end;
    gap: 15px;
    user-select: none;
  }
  .topbar .help {
    margin-right: auto;
    cursor: pointer;
    color: #ccc;
  }
  .topbar .user-info {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .topbar .user-info > * {
    cursor: default;
  }
  .topbar .icon {
    color: #ccc;
    cursor: pointer;
  }
  .sidebar {
    background-color: #1a1a1a;
    width: 60px;
    min-width: 60px;
    height: calc(100vh - 30px);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 10px;
    gap: 15px;
    user-select: none;
  }
  .sidebar .logo {
    width: 40px;
    height: 40px;
    margin-bottom: 5px;
  }
  .sidebar .logo img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
  .sidebar .logo-text {
    font-size: 10px;
    color: #3bb4f2;
    font-weight: 600;
    letter-spacing: 0.5px;
    margin-top: 2px;
    text-align: center;
    line-height: 1;
    margin-top: -15px;
  }
  .sidebar button {
    background: none;
    border: none;
    color: #999999;
    font-size: 20px;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }
  .sidebar button.active, .sidebar button:hover {
    color: #3bb4f2;
  }
  .main-container {
    height: calc(100vh - 30px);
    width: calc(100vw - 60px)
    display: flex;
    flex-direction: column;
  }
  .header-blue {
    background-color: #2196f3;
    color: white;
    padding: 10px 15px;
    font-size: 20px;
    font-weight: 400;
    user-select: none;
    display: flex;
    align-items: center;
  }
  .header-blue .appointments-count {
    font-weight: 600;
    margin-left: 5px;
  }
  .nav-tabs-custom {
    background-color: #2196f3;
    padding-left: 15px;
    padding-top: 5px;
  }
  .nav-tabs-custom .nav-link {
    color: white;
    font-size: 14px;
    font-weight: 600;
    padding: 5px 12px;
    border: none;
    border-radius: 0;
  }
  .nav-tabs-custom .nav-link.active {
    background-color: #0b7dda;
    color: white;
  }
  .filter-bar {
    background-color: white;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    padding: 5px 15px;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .filter-bar .btn {
    font-size: 13px;
    padding: 3px 10px;
  }
  .filter-bar select {
    font-size: 13px;
    height: 28px;
    padding: 2px 6px;
  }
  .filter-bar .btn-print {
    margin-left: auto;
    max-width: 180px;
    margin-right: 25px;
  }
  .content-area {
    display: flex;
    height: 100%;
    overflow: hidden;
  }
  .sidebar-left {
    width: 220px;
    border-right: 1px solid #ccc;
    background-color: #f8f8f8;
    overflow-y: auto;
    padding: 10px 10px 0 10px;
    font-size: 13px;
    user-select: none;
  }
  .sidebar-left .section-title {
    font-weight: 600;
    font-size: 12px;
    margin-bottom: 5px;
    display: flex;
    align-items: center;
    gap: 5px;
  }
  .sidebar-left .section-title i {
    font-size: 14px;
  }
  .sidebar-left .checkbox-group {
    margin-bottom: 15px;
  }
  .sidebar-left label {
    display: flex;
    align-items: center;
    gap: 5px;
    cursor: pointer;
  }
  .sidebar-left label input[type="checkbox"] {
    cursor: pointer;
  }
  .sidebar-left label .color-box {
    width: 12px;
    height: 12px;
    display: inline-block;
    border-radius: 2px;
  }
  .color-purple { background-color: #7f3fbf; }
  .color-orange { background-color: #d18a00; }
  .color-green { background-color: #3dbb00; }
  .sidebar-left small.text-primary {
    font-size: 12px;
    color: #2196f3;
    cursor: pointer;
    user-select: none;
  }
  .expandable {
    font-weight: 600;
    font-size: 12px;
    cursor: pointer;
    user-select: none;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 5px;
  }
  .expandable i {
    font-size: 10px;
  }
  .main-content {
    flex-grow: 1;
    overflow-x: auto;
    overflow-y: hidden;
    background-color: white;
  }
  .date-bar {
    display: flex;
    align-items: center;
    padding: 8px 15px;
    font-size: 14px;
    font-weight: 600;
    border-bottom: 1px solid #ccc;
    user-select: none;
    gap: 10px;
    flex-wrap: wrap;
  }
  .date-bar .view-select {
    margin-left: auto;
    margin-right: 10px;
    font-size: 13px;
    height: 28px;
    padding: 2px 6px;
    min-width: 130px;
  }
  .date-bar .btn-group {
    margin-right: 10px;
  }
  .date-bar .btn {
    font-size: 13px;
    padding: 3px 8px;
  }
  .date-bar .btn.today {
    background-color: #2196f3;
    color: white;
    border: none;
  }
  .date-bar .btn.today:hover {
    background-color: #0b7dda;
  }
  .date-bar .search-group {
    display: flex;
    align-items: center;
    gap: 5px;
    margin-right: 10px;
  }
  .date-bar input[type="search"] {
    font-size: 13px;
    height: 28px;
    padding: 2px 6px;
    width: 120px;
  }
  .date-bar select.slot-select {
    font-size: 13px;
    height: 28px;
    padding: 2px 6px;
    max-width: 130px;
  }
  table.schedule-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 12px;
  }
  table.schedule-table thead tr {
    background-color: #d3d3d3;
    color: #333;
    user-select: none;
  }
  table.schedule-table thead th {
    padding: 6px 8px;
    border: 1px solid #bbb;
    text-align: left;
    white-space: nowrap;
  }
  table.schedule-table thead th.time-header {
    cursor: pointer;
  }
  table.schedule-table thead th.time-header i {
    margin-left: 4px;
  }
  table.schedule-table tbody tr {
    height: 40px;
  }
  table.schedule-table tbody tr td {
    border: 1px solid #eee;
    padding: 6px 8px;
    color: #666;
  }
  .no-appointments {
    padding: 40px 0;
    text-align: center;
    color: #999999;
    font-weight: 600;
    font-size: 14px;
    user-select: none;
  }
  .advertisement {
    width: 160px;
    border-left: 1px solid #ccc;
    background-color: white;
    font-family: Arial, sans-serif;
    font-size: 13px;
    color: #333;
    padding: 10px 10px 10px 10px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    user-select: none;
  }
  .advertisement .ad-image {
    width: 100%;
    height: 120px;
    object-fit: contain;
    margin-bottom: 10px;
  }
  .advertisement .ad-text {
    flex-grow: 1;
  }
  .advertisement .ad-text h5 {
    font-weight: 600;
    font-size: 16px;
    margin-bottom: 10px;
    line-height: 1.2;
  }
  .advertisement .ad-text p {
    font-size: 12px;
    margin-bottom: 10px;
    line-height: 1.3;
  }
  .advertisement .ad-button {
    background-color: #f37021;
    color: white;
    border: none;
    font-size: 13px;
    font-weight: 600;
    padding: 6px 10px;
    cursor: pointer;
    border-radius: 3px;
    text-align: center;
  }
  .advertisement .ad-button:hover {
    background-color: #d65c00;
  }
  .bottom-right-icons {
    position: fixed;
    bottom: 10px;
    right: 10px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    z-index: 1000;
  }
  .bottom-right-icons button {
    background-color: #f37021;
    border: none;
    border-radius: 50%;
    width: 44px;
    height: 44px;
    color: white;
    font-size: 20px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .bottom-right-icons button:nth-child(2) {
    background-color: #6f42c1;
  }
  /* Scrollbar for left sidebar */
  .sidebar-left::-webkit-scrollbar {
    width: 6px;
  }
  .sidebar-left::-webkit-scrollbar-thumb {
    background-color: #ccc;
    border-radius: 3px;
  }
  /* Scrollbar for main content horizontal */
  .main-content::-webkit-scrollbar {
    height: 8px;
  }
  .main-content::-webkit-scrollbar-thumb {
    background-color: #ccc;
    border-radius: 4px;
  }
  /* Fix topbar and sidebar to top */
  .topbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1050;
  }
  .sidebar {
    position: fixed;
    top: 30px;
    left: 0;
    bottom: 0;
    z-index: 1040;
  }
  .main-container {
    width: calc(100vw - 60px);
    display: flex;
    flex-direction: column;
  }
  .content-area {
    height: 100%;
  }
  /* Remove white space between sidebar and main content */
  .content-area {
    gap: 0;
  }
  @media (max-width: 768px) {
    .sidebar {
      width: 50px;
    }
    .sidebar .logo-text {
      display: none;
    }
    .sidebar-left {
      display: none;
    }
    .advertisement {
      display: none;
    }
  }
  .container, .container-lg, .container-md, .container-sm, .container-xl {
      max-width: 1254px;
      margin-top: 31px;
  } 
 
  .header-bar {
    background-color: #2a7ae2;
    color: white;
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .header-bar h5 {
    margin: 0;
    font-weight: 400;
    font-size: 1.25rem;
  }
  .btn-actions {
    font-size: 0.875rem;
    padding: 0.25rem 0.75rem;
    border-radius: 0.25rem;
  }
  .nav-tabs .nav-link {
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
    border-radius: 0.25rem 0.25rem 0 0;
    color: white;
    background-color: #2a7ae2;
    border: none;
    margin-right: 0.25rem;
  }
  .nav-tabs .nav-link.active {
    background-color: white;
    color: #2a7ae2;
    border: 1px solid #2a7ae2;
    border-bottom-color: white;
  }
  .nav-tabs .nav-link:not(.active):hover {
    background-color: #1e5ec9;
    color: white;
  }
  .subnav-bar {
    background-color: white;
    border-bottom: 3px solid #2a7ae2;
    padding: 0.375rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .btn-refresh {
    border: 1px solid #2a7ae2;
    color: #2a7ae2;
    background-color: white;
    font-size: 0.875rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  .btn-refresh:hover {
    background-color: #e6f0ff;
  }
  .select-show {
    font-size: 0.875rem;
    border: 1px solid #ccc;
    border-radius: 0.25rem;
    padding: 0.25rem 0.5rem;
    margin-left: 0.25rem;
  }
  .message-settings {
    font-size: 0.875rem;
    color: #2a7ae2;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    cursor: pointer;
    user-select: none;
  }
  .message-settings:hover {
    text-decoration: underline;
  }
  .btn-new-message {
    background-color: #f47900;
    border: none;
    color: white;
    font-size: 0.875rem;
    padding: 0.375rem 1rem;
    border-radius: 0.25rem;
    margin-left: auto;
  }
  .btn-new-message:hover {
    background-color: #d96a00;
  }
  .content-area {
    display: flex;
    height: calc(100vh - 96px);
    border-top: 3px solid #2a7ae2;
  }
  .left-panel {
    flex: 1 1 50%;
    border-right: 3px solid #2a7ae2;
    overflow-y: auto;
  }
  .right-panel {
    flex: 1 1 50%;
    padding: 1rem;
  }
  table {
    width: 100%;
    font-size: 0.75rem;
    border-collapse: collapse;
  }
  thead tr {
    border-bottom: 1px solid #ccc;
  }
  thead th {
    padding: 0.25rem 0.5rem;
    font-weight: 600;
    text-align: left;
    color: #666;
  }
  tbody tr {
    height: 2.5rem;
  }
  tbody td {
    padding: 0 0.5rem;
  }
  .checkbox-cell {
    width: 1.5rem;
    text-align: center;
  }
  @media (max-width: 575.98px) {
    .content-area {
      flex-direction: column;
      height: auto;
    }
    .left-panel, .right-panel {
      flex: none;
      width: 100%;
      height: auto;
      border-right: none;
      border-bottom: 3px solid #2a7ae2;
    }
    .right-panel {
      border-bottom: none;
    }
  }
  </style>
 </head>
 <body>
  <div class="topbar">
   <div class="help">
    Help
    <i class="fas fa-caret-down">
    </i>
   </div>
   <div class="user-info">
    <div>
     Susan Martin
    </div>
    <div>
     |
    </div>
    <div>
     HeartWell Health
     <i class="fas fa-caret-down">
     </i>
    </div>
    <div>
     |
    </div>
    <div>
     <i class="fas fa-lock icon">
     </i>
    </div>
    <div>
      <%= link_to ehrsetting_path do %>
        <i class="fas fa-cog icon"></i>
      <% end %>
    </div>
    <%= button_to destroy_user_session_path, method: :delete, class: "border-0 bg-transparent p-0 d-flex align-items-center text-danger" do %>
      <i class="fas fa-sign-out-alt me-2"></i>
      <span>Log out</span>
    <% end %>
   </div>
  </div>
  <nav class="sidebar d-flex flex-column align-items-center">
    <div class="logo">
      <%= image_tag("unnamed.png", alt: "practice fusion image") %>
    </div>
    <div class="logo-text">
      practice fusion
    </div>
    <button aria-label="Home" style="color:#999999;" title="Home">
      <i class="fas fa-home">
      </i>
    </button>
    <div class="logo-text">
      Home
    </div>
    <button aria-label="Schedule" style="color:#3bb4f2;" title="Schedule"  onclick="window.location.href='/ot'">
      <i class="fas fa-calendar-alt">
      </i>
    </button>
    <div class="logo-text">
      Schedule
    </div>
    <button aria-label="Tasks" style="color:#999999;" title="Tasks" onclick="window.location.href='/task'">
      <i class="fas fa-tasks"></i>
    </button>
    <div class="logo-text">Task</div>
    <button aria-label="Charts" style="color:#999999;" title="Charts" onclick="window.location.href='/chart'">
      <i class="fas fa-file-medical-alt">
      </i>
    </button>
    <div class="logo-text">
      Charts
    </div>
    <button aria-label="Messages" style="color:#999999;" title="Messages" onclick="window.location.href='/message'">
      <i class="fas fa-envelope">
      </i>
    </button>
    <div class="logo-text">
      Messages
    </div>
    <button aria-label="Reports" style="color:#999999;" title="Reports" onclick="window.location.href='/report'">
      <i class="fas fa-chart-bar">
      </i>
    </button>
    <div class="logo-text">
      Reports
    </div>
  </nav>
  <div class="main-container d-flex flex-column flex-grow-1">
      <header class="header-bar">
        <h5>Messages</h5>
        <div class="dropdown">
          <button class="btn btn-sm btn-outline-light btn-actions dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Actions
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li>
              <a class="dropdown-item d-flex justify-content-between align-items-center" href="#">
                <span>New message</span>
                <kbd>N</kbd> + <kbd>M</kbd>
              </a>
            </li>
            <li>
              <a class="dropdown-item" href="#">Patient Messages Settings</a>
            </li>
            <li>
              <a class="dropdown-item d-flex justify-content-between align-items-center" href="#">
                <span>Create task</span>
                <kbd>N</kbd> + <kbd>T</kbd>
              </a>
            </li>
            <li>
              <a class="dropdown-item" href="#">Set up Direct messaging</a>
            </li>
          </ul>
        </div>
      </header>
      <nav class="px-3 pt-2">
        <ul class="nav nav-tabs" role="tablist" style="border-bottom:none;">
          <li class="nav-item" role="presentation">
            <button class="nav-link" type="button" role="tab" aria-selected="false" onclick="window.location.href='/message'">Inbox</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" type="button" role="tab" aria-selected="false" onclick="window.location.href='/messagesent'">Sent</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" type="button" role="tab" aria-selected="false" onclick="window.location.href='/messagearchive'">Archive</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" type="button" role="tab" aria-selected="false">Referrals</button>
          </li>
        </ul>
      </nav>
      <div class="subnav-bar">
        <button class="btn-refresh" type="button" aria-label="Refresh messages">
          <i class="fas fa-sync-alt"></i>
        </button>
        <label for="showSelect" class="mb-0" style="font-size:0.875rem; color:#2a7ae2;">Show</label>
        <select id="showSelect" class="select-show" aria-label="Show messages filter">
          <option>Show all</option>
          <option>üìã Show all</option>
          <option>üö® Urgent</option>
          <option>‚è≥ Non urgent</option>
          <option>üîí Private</option>
          <option>üë• Shared</option>
          <option>üì§ Referrals</option>
        </select>
        <div class="message-settings" role="button" tabindex="0" aria-label="Message settings">
          <i class="fas fa-cog"></i> Message settings
        </div>
        <button class="btn-new-message" data-bs-toggle="modal" data-bs-target="#newMessageModal">
          New Message
        </button>
      </div>
      <div class="modal fade" id="newMessageModal" tabindex="-1" aria-labelledby="newMessageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header bg-primary text-white">
              <h5 class="modal-title" id="newMessageModalLabel">New message</h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <!-- TO Dropdown -->
              <div class="mb-2">
                <label class="form-label">To <span class="text-danger">*</span></label>
                <select class="form-select">
                  <option>In practice</option>
                  <option>Outside provider</option>
                </select>
                <input type="text" class="form-control mt-1" placeholder="Search">
              </div>

              <!-- Regarding Patient -->
              <div class="mb-2">
                <label class="form-label">Regarding Patient</label>
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="Search patient name, record number, phone, DOB or SSN">
                  <button class="btn btn-outline-secondary" type="button">üîç</button>
                </div>
                <div class="form-check mt-1">
                  <input class="form-check-input" type="checkbox" id="addToChart">
                  <label class="form-check-label" for="addToChart">Add to chart</label>
                </div>
              </div>

              <!-- Subject -->
              <div class="mb-2">
                <label class="form-label">Subject <span class="text-danger">*</span></label>
                <input type="text" class="form-control" placeholder="Enter a subject">
              </div>

              <!-- Message -->
              <div class="mb-2">
                <label class="form-label">Message <span class="text-danger">*</span></label>
                <textarea class="form-control" rows="4" placeholder="Enter a message"></textarea>
              </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer justify-content-between">
              <button class="btn btn-outline-primary" data-bs-dismiss="modal">Cancel</button>
              <div>
                <input type="checkbox" id="urgentCheck">
                <label for="urgentCheck">Urgent</label>
                <button class="btn btn-primary ms-2">Send</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <main class="content-area" role="main">
        <section class="left-panel" aria-label="Message list">
          <table>
            <thead>
              <tr>
                <th class="checkbox-cell"><input type="checkbox" aria-label="Select all messages" /></th>
                <th>FROM</th>
                <th>PATIENT</th>
                <th>RECEIVED</th>
              </tr>
            </thead>
            <tbody>
              <!-- Empty body as in screenshot -->
            </tbody>
          </table>
        </section>
        <section class="right-panel" aria-label="Message content">
          <p style="font-size:1rem; color:#000;">Click a message to show it here.</p>
        </section>
