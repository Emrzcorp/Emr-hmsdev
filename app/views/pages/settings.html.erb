<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Appointment Requests</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>
<body>
  <div class="main-container d-flex flex-column flex-grow-1">
    <div class="main-container d-flex flex-column flex-grow-1">
      <div class="header-blue">
        Schedule
      </div>
      <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
        <li class="nav-item" role="presentation">
          <%= link_to 'Appointments', ot_path, class: "nav-link #{'active' if current_page?(ot_path)}", role: 'tab' %>
        </li>
        <li class="nav-item" role="presentation">
          <%= link_to 'Day', day_path, class: "nav-link #{'active' if current_page?(day_path)}", role: 'tab' %>
        </li>
        <li class="nav-item" role="presentation">
          <%= link_to 'Week', week_path, class: "nav-link #{'active' if current_page?(week_path)}", role: 'tab' %>
        </li>
        <li class="nav-item" role="presentation">
          <%= link_to 'Settings', settings_path, class: "nav-link #{'active' if current_page?(settings_path)}", role: 'tab' %>
        </li>
      </ul>
      <div>
      <div>
      <strong>Appointment requests</strong>
      <form class="mb-3" style="font-size: 0.8rem;">
        <div class="mb-2">
          <strong>Cancellation approval</strong>
        </div>
        <div class="form-check mb-1">
          <input class="form-check-input" type="radio" name="cancelApproval" id="cancelApproval1" value="noApproval" />
          <label class="form-check-label" for="cancelApproval1">Do not require approval for cancellation requests.</label>
        </div>
        <div class="form-check mb-1">
          <input class="form-check-input" type="radio" name="cancelApproval" id="cancelApproval2" value="allApproval" />
          <label class="form-check-label" for="cancelApproval2">Require approval for all cancellation requests.</label>
        </div>
        <div class="form-check mb-3">
          <input class="form-check-input" type="radio" name="cancelApproval" id="cancelApproval3" value="approvalWithin" checked />
          <label class="form-check-label" for="cancelApproval3">Require approvals for cancellation requests that fall within</label>
          <input type="number" min="0" value="1" aria-label="Number of calendar days" />
          <span>calendar days.</span>
        </div>

        <div class="mb-2">
          <strong>Cancellation policy</strong>
        </div>
        <div class="form-check mb-1">
          <input class="form-check-input" type="radio" name="cancelPolicy" id="cancelPolicy1" value="noPolicy" />
          <label class="form-check-label" for="cancelPolicy1">Practice does not have a cancellation policy.</label>
        </div>
        <div class="form-check mb-3">
          <input class="form-check-input" type="radio" name="cancelPolicy" id="cancelPolicy2" value="alertPatient" checked />
          <label class="form-check-label" for="cancelPolicy2">Alert patient about possible charges for appointment canceled within</label>
          <input type="number" min="0" value="2" aria-label="Number of calendar days" />
          <span>calendar days.</span>
        </div>
      </form>

      <div style="font-size: 0.7rem; font-weight: 600; text-transform: uppercase; margin-bottom: 0.25rem;">
        Color coding
      </div>
      <div style="font-size: 0.65rem; margin-bottom: 0.5rem;">
        COLOR CODE MY SCHEDULE BY
      </div>
      <div class="btn-toggle-group mb-3" role="group" aria-label="Color code toggle">
        <button type="button" class="active" aria-pressed="true">Provider</button>
        <button type="button" aria-pressed="false">Appointment type</button>
      </div>

      <div>
        <strong>Providers</strong>
        <table>
          <thead>
            <tr>
              <th>Provider</th>
              <th>Color</th>
              <th>Available for scheduling <i class="fa fa-circle-info" title="Information"></i></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Susan Martin</td>
              <td><div class="color-box color-purple" aria-label="Purple color box"></div></td>
              <td>
                <div class="form-check form-switch d-flex align-items-center justify-content-start gap-1">
                  <span class="text-muted" style="font-size: 0.7rem;">ON</span>
                  <input class="form-check-input" type="checkbox" id="susanAvailable" />
                </div>
              </td>
            </tr>
            <tr>
              <td>Ian Persaud</td>
              <td><div class="color-box color-gold" aria-label="Gold color box"></div></td>
              <td>
                <div class="form-check form-switch d-flex align-items-center justify-content-start gap-1">
                  <span class="text-muted" style="font-size: 0.7rem;">ON</span>
                  <input class="form-check-input" type="checkbox" id="ianAvailable" />
                </div>
              </td>
            </tr>
            <tr>
              <td>Jennifer Persaud</td>
              <td><div class="color-box color-green" aria-label="Green color box"></div></td>
              <td>
                <div class="form-check form-switch d-flex align-items-center justify-content-start gap-1">
                  <input class="form-check-input" type="checkbox" id="jenniferAvailable" disabled />
                  <span class="text-muted" style="font-size: 0.7rem;">OFF</span>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div><br>
      <div class="container-fluid px-3">
          <h6 class="fw-bold mb-2">Appointment types</h6>
          <label for="appointmentTypeInput" class="form-label text-uppercase" style="font-size: 9px; font-weight: 600; color: #6c757d;">Appointment type</label>
          <div class="d-flex mb-2">
            <input type="text" id="appointmentTypeInput" class="form-control input-appointment" placeholder="Enter name for appointment type" />
            <button type="button" class="btn btn-secondary btn-add ms-2" disabled>Add appointment type</button>
          </div>
          <div class="scrollable-table">
            <table class="table table-sm mb-0 w-100">
              <thead>
                <tr>
                  <th scope="col" style="width: 60px;">Default</th>
                  <th scope="col" style="width: 200px;">Appointment type</th>
                  <th scope="col" style="width: 60px;">Color</th>
                  <th scope="col" style="width: 90px;">Duration (mins)</th>
                  <th scope="col" style="width: 60px;">Active</th>
                  <th scope="col" style="width: 90px;">Editable</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="radio" name="defaultAppointment" checked />
                  </td>
                  <td>No default appointment type</td>
                  <td></td>
                  <td></td>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="checkbox" checked disabled />
                  </td>
                  <td class="not-editable">Not editable</td>
                </tr>
                <tr>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="radio" name="defaultAppointment" />
                  </td>
                  <td>Wellness Exam</td>
                  <td>
                    <span class="color-box" style="background-color: #4a6e6e;" title="Color for Wellness Exam"></span>
                  </td>
                  <td>
                    <input type="text" class="form-control form-control-sm" style="width: 50px; display: inline-block;" disabled />
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" disabled></button>
                  </td>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="checkbox" checked disabled />
                  </td>
                  <td class="not-editable">Not editable</td>
                </tr>
                <tr>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="radio" name="defaultAppointment" />
                  </td>
                  <td>Follow-Up Visit</td>
                  <td>
                    <span class="color-box" style="background-color: #a55a00;" title="Color for Follow-Up Visit"></span>
                  </td>
                  <td>
                    <input type="text" class="form-control form-control-sm" style="width: 50px; display: inline-block;" disabled />
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" disabled></button>
                  </td>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="checkbox" checked disabled />
                  </td>
                  <td class="not-editable">Not editable</td>
                </tr>
                <tr>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="radio" name="defaultAppointment" />
                  </td>
                  <td>Nursing Only</td>
                  <td>
                    <span class="color-box" style="background-color: #5a7a3d;" title="Color for Nursing Only"></span>
                  </td>
                  <td>
                    <input type="text" class="form-control form-control-sm" style="width: 50px; display: inline-block;" disabled />
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" disabled></button>
                  </td>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="checkbox" checked disabled />
                  </td>
                  <td class="not-editable">Not editable</td>
                </tr>
                <tr>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="radio" name="defaultAppointment" />
                  </td>
                  <td>Urgent Visit</td>
                  <td>
                    <span class="color-box" style="background-color: #7a3a5a;" title="Color for Urgent Visit"></span>
                  </td>
                  <td>
                    <input type="text" class="form-control form-control-sm" style="width: 50px; display: inline-block;" disabled />
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" disabled></button>
                  </td>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="checkbox" checked disabled />
                  </td>
                  <td class="not-editable">Not editable</td>
                </tr>
                <tr>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="radio" name="defaultAppointment" />
                  </td>
                  <td>New Patient Visit</td>
                  <td>
                    <span class="color-box" style="background-color: #5a1a7a;" title="Color for New Patient Visit"></span>
                  </td>
                  <td>
                    <input type="text" class="form-control form-control-sm" style="width: 50px; display: inline-block;" disabled />
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" disabled></button>
                  </td>
                  <td class="checkbox-center">
                    <input class="form-check-input" type="checkbox" checked disabled />
                  </td>
                  <td class="not-editable">Not editable</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div><br><br>
        <h5>Facilities</h5>
          <div class="mb-2" style="font-weight:600; font-size:0.75rem;">Scheduling for multiple facilities</div>
          <div class="form-check form-switch d-flex align-items-center mb-1" style="gap:0.5rem;">
            <input class="form-check-input" type="checkbox" role="switch" id="facilityWarningSwitch" checked />
            <label class="form-check-label" for="facilityWarningSwitch" style="font-weight:400; font-size:0.875rem; user-select:none;">Provider at other facility warning dialog</label>
          </div>
          <div class="text-muted-small">Scheduling conflict warning triggered when a provider is about to be booked at multiple facilities at the same time.</div>

          <label for="facilityHoursSelect" class="form-label form-label-bold mb-1">FACILITY HOURS</label>
          <select class="form-select mb-3" id="facilityHoursSelect" aria-label="Facility hours select">
            <option selected>HeartWell Health</option>
          </select>

        <table class="table table-bordered" style="max-width: 600px;">
          <thead>
            <tr>
              <th scope="col" style="width: 120px;">DAY</th>
              <th scope="col" style="width: 180px;">HOURS OPEN TO CLOSED</th>
              <th scope="col" style="width: 180px;">SCHEDULE TYPE</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Sunday</td>
              <td>
                <div class="d-flex align-items-center gap-1">
                  <input type="text" class="form-control time-input" value="12:00 AM" aria-label="Sunday open time" />
                  <span style="font-weight:600;">to</span>
                  <input type="text" class="form-control time-input" value="12:00 AM" aria-label="Sunday close time" />
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Sunday open time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Sunday close time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                </div>
              </td>
              <td>
                <select class="form-select form-select-sm" aria-label="Sunday schedule type">
                  <option selected>Closed</option>
                  <option>Specific hours</option>
                </select>
              </td>
            </tr>
            <tr>
              <td>Monday</td>
              <td>
                <div class="d-flex align-items-center gap-1">
                  <input type="text" class="form-control time-input" value="08:00 AM" aria-label="Monday open time" />
                  <span style="font-weight:600;">to</span>
                  <input type="text" class="form-control time-input" value="05:00 PM" aria-label="Monday close time" />
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Monday open time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Monday close time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                </div>
              </td>
              <td>
                <select class="form-select form-select-sm" aria-label="Monday schedule type">
                  <option>Closed</option>
                  <option selected>Specific hours</option>
                </select>
              </td>
            </tr>
            <tr>
              <td>Tuesday</td>
              <td>
                <div class="d-flex align-items-center gap-1">
                  <input type="text" class="form-control time-input" value="08:00 AM" aria-label="Tuesday open time" />
                  <span style="font-weight:600;">to</span>
                  <input type="text" class="form-control time-input" value="05:00 PM" aria-label="Tuesday close time" />
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Tuesday open time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Tuesday close time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                </div>
              </td>
              <td>
                <select class="form-select form-select-sm" aria-label="Tuesday schedule type">
                  <option>Closed</option>
                  <option selected>Specific hours</option>
                </select>
              </td>
            </tr>
            <tr>
              <td>Wednesday</td>
              <td>
                <div class="d-flex align-items-center gap-1">
                  <input type="text" class="form-control time-input" value="08:00 AM" aria-label="Wednesday open time" />
                  <span style="font-weight:600;">to</span>
                  <input type="text" class="form-control time-input" value="05:00 PM" aria-label="Wednesday close time" />
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Wednesday open time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Wednesday close time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                </div>
              </td>
              <td>
                <select class="form-select form-select-sm" aria-label="Wednesday schedule type">
                  <option>Closed</option>
                  <option selected>Specific hours</option>
                </select>
              </td>
            </tr>
            <tr>
              <td>Thursday</td>
              <td>
                <div class="d-flex align-items-center gap-1">
                  <input type="text" class="form-control time-input" value="08:00 AM" aria-label="Thursday open time" />
                  <span style="font-weight:600;">to</span>
                  <input type="text" class="form-control time-input" value="05:00 PM" aria-label="Thursday close time" />
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Thursday open time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Thursday close time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                </div>
              </td>
              <td>
                <select class="form-select form-select-sm" aria-label="Thursday schedule type">
                  <option>Closed</option>
                  <option selected>Specific hours</option>
                </select>
              </td>
            </tr>
            <tr>
              <td>Friday</td>
              <td>
                <div class="d-flex align-items-center gap-1">
                  <input type="text" class="form-control time-input" value="08:00 AM" aria-label="Friday open time" />
                  <span style="font-weight:600;">to</span>
                  <input type="text" class="form-control time-input" value="05:00 PM" aria-label="Friday close time" />
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Friday open time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Friday close time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                </div>
              </td>
              <td>
                <select class="form-select form-select-sm" aria-label="Friday schedule type">
                  <option>Closed</option>
                  <option selected>Specific hours</option>
                </select>
              </td>
            </tr>
            <tr>
              <td>Saturday</td>
              <td>
                <div class="d-flex align-items-center gap-1">
                  <input type="text" class="form-control time-input" value="12:00 AM" aria-label="Saturday open time" />
                  <span style="font-weight:600;">to</span>
                  <input type="text" class="form-control time-input" value="12:00 AM" aria-label="Saturday close time" />
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Saturday open time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm p-0" style="width: 1.5rem; height: 1.5rem; font-size: 0.75rem;" aria-label="Saturday close time picker">
                    <i class="fas fa-clock"></i>
                  </button>
                </div>
              </td>
              <td>
                <select class="form-select form-select-sm" aria-label="Saturday schedule type">
                  <option selected>Closed</option>
                  <option>Specific hours</option>
                </select>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
</body>
</html>
