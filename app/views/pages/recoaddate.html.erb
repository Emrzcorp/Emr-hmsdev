                  <div class="form-check"><input class="form-check-input" type="radio" name="drinkAmount" id="3or4"><label class="form-check-label" for="3or4">3 or 4</label></div>
                  <div class="form-check"><input class="form-check-input" type="radio" name="drinkAmount" id="5or6"><label class="form-check-label" for="5or6">5 or 6</label></div>
                  <div class="form-check"><input class="form-check-input" type="radio" name="drinkAmount" id="7to9"><label class="form-check-label" for="7to9">7 to 9</label></div>
                  <div class="form-check"><input class="form-check-input" type="radio" name="drinkAmount" id="10plus"><label class="form-check-label" for="10plus">10 or more</label></div>
                </div>
