<html lang="en">
 <head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1" name="viewport"/>
  <title>
   Practice Fusion Schedule
  </title>
  <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
 </head>
 <body>
  <div class="main-container d-flex flex-column flex-grow-1">
    <div class="topbarx">
      <div class="reports-text">Reports</div>
      <div class="patient-report-tab">
        <span>Patient list report</span>
        <i class="fas fa-times close-icon" aria-label="Close tab" onclick="window.location.href='/report'"></i>
      </div>
    </div>
    <div class="header-bar">
      <h2>Patient list report</h2>
      <button class="btn-actions" type="button" aria-haspopup="true" aria-expanded="false" aria-label="Actions dropdown">
        Actions <i class="fas fa-caret-down"></i>
      </button>
      <div class="dropdown-menu">
          <a href="#">Open saved queries</a>
          <a href="#">View FHIR Groups</a>
          <a href="#">Export to CSV</a>
          <a href="#">Export as CCD</a>
        </div>
    </div>
    <div class="filters-bar">
      <select aria-label="Select patient group">
        <option>All patients</option>
        <option>Active patients</option>
        <option>inactive patients</option>
      </select>
      <select aria-label="Add criteria" id="addCriteriaSelect">
        <option>Add criteria</option>
          <optgroup label="Demographic">
            <option value="age">Age</option>
            <option value="sex">Sex</option>
          </optgroup>

          <optgroup label="Clinical">
            <option value="diagnoses">Diagnoses</option>
            <option value="encounters_signed">Encounters (signed)</option>
            <option value="procedures">Procedures</option>
            <option value="medications">Medications</option>
            <option value="lab_test_results">Lab test results</option>
          </optgroup>

          <optgroup label="Other">
            <option value="patient_risk_score">Patient risk score</option>
            <option value="care_team">Care team</option>
            <option value="race">Race</option>
            <option value="ethnicity">Ethnicity</option>
            <option value="smoking_status">Smoking status</option>
          </optgroup>
      </select>
      <button class="btn-run-report" type="button" disabled>Run report</button>
    </div>
    <div class="filter-row align-items-center" id="age-form" style="display: none;">
            <div class="container py-3">
              <div class="filter-row">
                <select class="filter-select form-select form-select-sm" aria-label="All patients">
                  <option selected>All patients</option>
                </select>
                <i class="fas fa-cog filter-icon ms-auto" title="Settings"></i>
              </div>

              <div class="filter-row align-items-center">
                <div class="filter-label">AND</div>
                <select class="filter-select form-select form-select-sm" aria-label="Age">
                  <option>Age</option>
                </select>
                <select class="filter-select form-select form-select-sm" aria-label="Operator">
                  <option>=</option>
                </select>
                <input type="number" class="filter-input form-control form-control-sm" value="20" aria-label="Age value" />
                <select class="filter-select form-select form-select-sm" aria-label="Years">
                  <option>Years</option>
                </select>
              </div>

              <div class="filter-row align-items-center">
                <div class="filter-label">AND</div>
                <select class="filter-select form-select form-select-sm" aria-label="Sex">
                  <option>Sex</option>
                </select>
                <div class="filter-multiselect" aria-label="Sex multi select" role="list">
                  <div class="tag" role="listitem">Female <i class="fas fa-times"></i></div>
                  <div class="tag" role="listitem">Male <i class="fas fa-times"></i></div>
                  <input type="text" placeholder="Select sex" aria-label="Select sex" />
                </div>
              </div>

              <div class="filter-row align-items-center">
                <div class="filter-label">AND</div>
                <select class="filter-select form-select form-select-sm" aria-label="Encounters (sign)">
                  <option>Encounters (sign...)</option>
                </select>
                <input type="date" class="filter-date form-control form-control-sm" value="2021-06-25" aria-label="From date" />
                <span class="mx-1">to</span>
                <input type="date" class="filter-date form-control form-control-sm" value="2021-08-31" aria-label="To date" />
                <div class="btn-group btn-group-sm ms-2" role="group" aria-label="Date range quick select">
                  <button type="button" class="btn btn-outline-secondary">Last 3 mos</button>
                  <button type="button" class="btn btn-outline-secondary">6 mos</button>
                  <button type="button" class="btn btn-outline-secondary">1 yr</button>
                </div>
              </div>

              <div class="filter-row align-items-center">
                <div class="filter-label">&nbsp;</div>
                <input type="text" class="filter-input form-control form-control-sm" value="185349003 (SNO..." aria-label="Encounter types" />
                <input type="text" class="filter-input form-control form-control-sm ms-2" placeholder="Select one or more encounter types" aria-label="Select encounter types" />
              </div>

              <div class="filter-row align-items-center">
                <div class="filter-label">AND</div>
                <select class="filter-select form-select form-select-sm" aria-label="Diagnoses">
                  <option>Diagnoses</option>
                </select>
                <select class="filter-select form-select form-select-sm" aria-label="Status">
                  <option>Active</option>
                </select>
                <div class="filter-multiselect" aria-label="Diagnosis codes multi select" role="list" style="min-width: 350px;">
                  <div class="tag" role="listitem">E11.9 <i class="fas fa-times"></i></div>
                  <div class="tag" role="listitem">E10.9 <i class="fas fa-times"></i></div>
                  <div class="tag" role="listitem">E11.59 <i class="fas fa-times"></i></div>
                  <div class="tag" role="listitem">E11.8 <i class="fas fa-times"></i></div>
                  <div class="tag" role="listitem">R82.99 <i class="fas fa-times"></i></div>
                  <div class="tag" role="listitem">O24.919 <i class="fas fa-times"></i></div>
                  <div class="tag" role="listitem">O24.92 <i class="fas fa-times"></i></div>
                  <input type="text" placeholder="Search for one ..." aria-label="Search diagnosis codes" />
                </div>
              </div>

              <div class="filter-row align-items-center">
                <div class="filter-label">AND</div>
                <select class="filter-select form-select form-select-sm" aria-label="Add criteria">
                  <option>Add criteria</option>
                </select>
              </div>
            </div>
    </div>
    <div class="table-container">
      <table aria-label="Patient list report table">
        <thead>
          <tr>
            <th scope="col"><input type="checkbox" aria-label="Select all patients" disabled /></th>
            <th scope="col">FIRST NAME</th>
            <th scope="col">LAST NAME</th>
            <th scope="col">PATIENT ID</th>
            <th scope="col">DOB</th>
            <th scope="col">AGE</th>
            <th scope="col">SEX</th>
            <th scope="col">PREFERRED CONTACT</th>
            <th scope="col">STATUS</th>
            <th scope="col">EXPAND</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="10" class="empty-message">
              <div><strong>Select one or more search parameters and then run the report.</strong></div>
              <div>From the results, one or more patients can be selected in order to export the search results.</div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <script crossorigin="anonymous" integrity="sha384-ENjdO4Dr2bkBIFxQpeoY9l+Y1NQZ6jIW3" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
  </script>
  <script>
    document.getElementById('addCriteriaSelect').addEventListener('change', function () {
      const selectedValue = this.value;
      const ageForm = document.getElementById('age-form');

      if (selectedValue === 'age') {
        ageForm.style.display = 'flex';
      } else {
        ageForm.style.display = 'none';
      }
    });
  </script>
 </body>
</html>
