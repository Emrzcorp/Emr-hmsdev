<div class="container mt-3">
  <h1>Appointments</h1>
  <%= link_to 'New Appointment', new_appointment_path unless params[:patient_id] %>
  <table>
    <thead>
      <tr>
        <th>Patient Name</th>
        <th>Doctor Name</th>
        <th>Scheduled Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @appointments.each do |appointment| %>
        <tr>
          <td><%= appointment.patient.try(:full_name) %></td>
          <td><%= appointment.doctor.try(:full_name) %></td>
          <td><%= appointment.scheduled_date.strftime("%d-%m-%Y") %></td>
          <td>
            <%= link_to 'Show', appointment, class: 'btn btn-primary p-2 text-decoration-none' %>
            <%= link_to 'Edit', edit_appointment_path(appointment), class: 'btn btn-secondary p-2 text-decoration-none' %>
            <%= button_to 'Destroy', appointment, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger text-decoration-none mt-1' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>